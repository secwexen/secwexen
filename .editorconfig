# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

# Applies to all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML and JSON files
[*.{yml,yaml,json}]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# JavaScript files
[*.js]
indent_size = 2
